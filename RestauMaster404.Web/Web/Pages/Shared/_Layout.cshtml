<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>

    <!-- Bootstrap base -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Sidebar personalizado -->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">RestauMaster</div>
        <ul class="nav">

            <li class="nav-item">
                <a class="nav-link text-white text-decoration-none d-flex align-items-center" asp-page="/Index">
                    <i class="bi bi-house me-2"></i>
                    Dashboard
                </a>
            </li>
            <hr class="sidebar-divider" />

            <!-- CRUD (menú principal) -->
            <li class="nav-item">
                <a href="#" class="nav-link d-flex align-items-center text-white text-decoration-none crud-toggle">
                    <i class="bi bi-folder-fill me-2"></i> <span>CRUD</span>
                </a>

                <!-- Submenús anidados -->
                <ul class="submenu">

                    <!-- Platillos -->
                    <li class="nav-item">
                        <a href="#" class="nav-link d-flex align-items-center text-white text-decoration-none sub-toggle">
                            <i class="bi bi-list me-2"></i> <span>Platillos</span>
                        </a>
                        <ul class="submenu">
                            <li><a class="text-white text-decoration-none" asp-page="/Platillos/Index">Ver</a></li>
                            <li><a class="text-white text-decoration-none" asp-page="/Platillos/Agregar">Agregar</a></li>
                            <li><a class="text-white text-decoration-none" asp-page="/Platillos/Editar">Editar</a></li>
                            <li><a class="text-white text-decoration-none" asp-page="/Platillos/Eliminar">Eliminar</a></li>
                        </ul>
                    </li>

                    <!-- Ventas -->
                    <li class="nav-item">
                        <a href="#" class="nav-link d-flex align-items-center text-white text-decoration-none sub-toggle">
                            <i class="bi bi-cash-stack me-2"></i> <span>Ventas</span>
                        </a>
                        <ul class="submenu">
                            <li><a class="text-white text-decoration-none" asp-page="/Ventas/Index">Ver</a></li>
                            <li><a class="text-white text-decoration-none" asp-page="/Ventas/Agregar">Agregar</a></li>
                            <li><a class="text-white text-decoration-none" asp-page="/Ventas/Editar">Editar</a></li>
                            <li><a class="text-white text-decoration-none" asp-page="/Ventas/Eliminar">Eliminar</a></li>
                        </ul>
                    </li>

                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white text-decoration-none d-flex align-items-center" asp-page="/Privacy">
                    <i class="bi bi-shield-lock me-2"></i>
                    <span>Privacidad</span>
                </a>
            </li>

        </ul>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-5">
            <div class="container">
                &copy; 2025 - Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- Scripts base -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
