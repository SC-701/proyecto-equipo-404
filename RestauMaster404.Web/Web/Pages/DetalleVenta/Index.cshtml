@page
@model Web.Pages.DetalleVenta.IndexModel
@{
	ViewData["Title"] = "Detalle de la Venta";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Ventas</h2>
        <a asp-page="Agregar" class="btn btn-primary">
            <i class="fas fa-plus"></i> Agregar detalle de la venta
        </a>
    </div>
</div>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary(true)
    </div>
}

@if (Model.DetalleVentas.Any())
{

    <div class="col-12 text-center text-muted">
        <p>No se encontraron platillos. <a asp-page="Agregar">¿Te gustaría agregar uno?</a></p>
    </div>

    
}
else
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Platillo</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalleVenta in Model.DetalleVentas)
            {
                <tr>
                    <td>@detalleVenta.NombrePlatillo</td>
                    <td>@detalleVenta.Cantidad</td>
                    <td>@detalleVenta.PrecioUnitario</td>
                    <td>@detalleVenta.SubTotal</td>
                    <td>
                        <a asp-page="Editar" asp-route-id="@detalleVenta.Id" class="btn btn-sm btn-outline-secondary me-2">Editar</a>
                        <a asp-page="Eliminar" asp-route-id="@detalleVenta.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}